<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddServiceActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        >
        <EditText
            android:id="@+id/editTextDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DuraciÃ³n"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextPetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la mascota"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextServiceDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de servicio"
            android:inputType="date" />

        <Button
            android:id="@+id/buttonSaveService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar Servicio" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>