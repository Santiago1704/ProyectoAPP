<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ff0dc3ff"
    tools:context=".AddServiceActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/editTextDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext"
            android:hint="DuraciÃ³n"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/c_004982"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextPetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext"
            android:hint="Nombre de la mascota"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/c_004982"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextServiceDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext"
            android:hint="Fecha de servicio"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/c_004982"
            android:inputType="date" />

        <EditText
            android:id="@+id/editTextWalkerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext"
            android:hint="Nombre del paseador"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/c_004982"
            android:inputType="text" />

        <Button
            android:id="@+id/buttonSaveService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/c_ff023a47"
            android:text="Guardar Servicio"
            android:textColor="@android:color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
